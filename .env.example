# ========================================
# CONFIGURACIÓN CONSTRUCTOR DE DOCUMENTOS SUMATE
# ========================================
NODE_ENV=production
PORT=3003
SERVICE_NAME=constructor-de-documentos-sumate

# ========================================
# SUPABASE CLIENT
# ========================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# SUPABASE STORAGE BUCKETS
# ========================================
SUPABASE_BUCKET_TEMPLATES=plantillas-documentos
SUPABASE_BUCKET_GENERATED=documentos-generados

# ========================================
# WEBHOOKS N8N
# ========================================
N8N_WEBHOOK_URL=https://n8n.evolvedigital.cloud/webhook/chatbot-sumante

# ========================================
# SEGURIDAD DE DOCUMENTOS
# ========================================
FRASE_SECRETA_EXCEL=tu_frase_secreta_para_excel

# ========================================
# CONFIGURACIÓN DE TEMPLATES
# ========================================
TEMPLATES_DIRECTORY=./templates
MAPPINGS_DIRECTORY=./mappings

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info